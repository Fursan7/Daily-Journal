  <a href="/posts/<%= post.title %>">Read More </a>
</p>
<form action="/delete" method="post">
  <button class="btn btn-primary" name="btn" value="<%=post._id%>">Delete</button>
</form>

<% console.log(post.title); %> <% }); %> <%- include('partials/footer.ejs'); %>
